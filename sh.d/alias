#!/bin/sh
# set aliases

# ls shorteners
lsargs='--color --group-directories-first'
alias l='ls ${lsargs}'
alias la='ls -a ${lsargs}'
alias ll='ls -lh ${lsargs}'

# shorteners
alias n='ncmpcpp'
alias g='git'
alias r='ranger'
alias i='dtach -A /tmp/irc-dtach weechat'
alias p="pwd | sed \"s:$HOME:~:g\""
alias e='$EDITOR'
alias f='$EDITOR -c ":CtrlPMixed"'
alias c='cd'
alias ayy='echo lmao'

alias '~'="cd ~"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# options
alias cmat='cmatrix -C red -an'
alias screenf="screenfetch -c1,5 -d '-gpu'"
alias ccr='ccrypt -k ~/.ccryptpass'
alias snc='rclone sync $HOME/var/ sxthe:sxthebac'

# sudo works with aliases
alias sudo='sudo '

# speed test
alias bt='wget -O /dev/null http://speedtest.wdc01.softlayer.com/downloads/test10.zip'

# tar
trc()
{
    dest=$(echo "$1" | sed 's:/$::')

    if [ -n "$2" ]; then
        tar cvfz ${dest}.tar.gz ${2}
    else
        tar cvfz ${dest}.tar.gz ${dest}
    fi
}

trx()
{
    tar xvfz ${1}.tar.gz
}

ytm()
{
    youtube-dl -x --audio-format mp3 $@
}

# auto compile fonts
autofont()
{
    bdftopcf $1.bdf -o $1.pcf && \
        mkfontscale && \
        mkfontdir && \
        xset fp rehash && \
        fc-cache -fv
}

# quick access to config files
cnf()
{
    case $1 in
        a|alias)
            $EDITOR ~/.sh.d/alias ;;
        e|editor)
            $EDITOR ~/.config/nvim/init.vim ;;
        n|ncmpcpp)
            $EDITOR ~/.ncmpcpp/config ;;
        x|xrdb)
            $EDITOR ~/.xresources ;;
        s|sxhkd|sxhkdrc)
            $EDITOR ~/.config/sxhkd/sxhkdrc ;;
        w|weechat)
            $EDITOR ~/.weechat/weechat.conf ;;
        t|tmux)
            $EDITOR ~/.tmux.conf ;;
        2|2bwm)
            $EDITOR ~/src/pkg/twobwm/config.h ;;
    esac
}

# source files and stuff
src()
{
    case $1 in
        shell|sh|s)
            source ~/.bashrc ;;
        xrdb|x)
            xrdb ~/.xresources
            ;;
        2bwm|2)
            prev=$(pwd) && \
            cd ~/src/pkg/twobwm && \
            make && sudo make install && \
            cd $prev ;;
    esac
}
