#!/usr/bin/env bash
# functions

# auto compile fonts
autofont()
{
    bdftopcf $1.bdf -o $1.pcf && \
        mkfontscale && \
        mkfontdir && \
        xset fp rehash && \
        fc-cache -fv
}

# quick access to config files
conf()
{
    case $1 in
        e|editor)
            $EDITOR ~/.config/nvim/init.vim ;;
        ncmpcpp|n)
            $EDITOR ~/.ncmpcpp/config ;;
        xrdb|x)
            $EDITOR ~/.Xresources ;;
        sxhkd|sxhkdrc|s)
            $EDITOR ~/.config/sxhkd/common ;;
        w|weechat)
            $EDITOR ~/.weechat/weechat.conf ;;
        t|tmux)
            $EDITOR ~/.tmux.conf ;;
        2bwm|2)
            $EDITOR ~/src/pkg/2bwm/config.h ;;
    esac
}

# source files and stuff
src()
{
    case $1 in
        shell|sh|s)
            source ~/.bashrc ;;
        xrdb|x)
            xrdb ~/.Xresources ;;
        2bwm|2)
            prev=$(pwd) && \
            cd ~/src/pkg/2bwm && \
            make && sudo make install && \
            cd $prev ;;
    esac
}

# ls after cd
cdl()
{
    builtin cd "$@" && ls --color --group-directories-first
}

# just heck it all
heck()
{
    sudo $(fc -nlr | sed 1q)
}

# extract files
# stolen from arc
extract()
{
    if [ -f $1 ]; then
        case $1 in
            *.tar.bz2) tar xvjf $1 ;;
            *.tar.gz) tar xvzf $1 ;;
            *.bz2) bunzip2 $1 ;;
            *.gz) gunzip $1 ;;
            *.tar) tar xvf $1 ;;
            *.tbz2) tar xvjf $1 ;;
            *.tgz) tar xvzf $1 ;;
            *.xz) unxz $1 ;;
            *.zip) unzip $1 ;;
            *.Z) uncompress $1 ;;
            *) echo 'cannot be extracted' ;;
        esac
    else
        echo 'not valid file'
    fi
}
