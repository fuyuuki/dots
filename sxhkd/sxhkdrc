#
# wmutils
#

alt + shift + c
    killw $(pfw)

alt + Tab
    focus.sh next

# move windows
alt + {h,j,k,l}
    wmv {-40 0, 0 40, 0 -40, 40 0} $(pfw)

# move windows slowly
alt + ctrl + {h,j,k,l}
    wmv {-20 0, 0 20, 0 -20, 20 0} $(pfw)

# resize windows
alt + shift + {h,j,k,l}
    wrs {-40 0, 0 40, 0 -40, 40 0} $(pfw)

# resize windows slowly
alt + shift + ctrl + {h,j,k,l}
    wrs {-20 0, 0 20, 0 -20, 20 0} $(pfw)
