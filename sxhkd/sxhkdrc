#
# wm independent hotkeys
#

# terminal emulator
alt + Return
	urxvt -g 80x24+417+215

alt + shift + Return
	urxvt -g 80x24+417+215 -e "screen -r"

# program launcher
alt + r
    dmenu.sh

# make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd

alt + F7
    amixer -q sset Master 5%- unmute

alt + F8
    amixer -q sset Master 5%+ unmute

alt + F{9,11}
    mpc {prev,next}

alt + F10
    mpc toggle

# launch web browser
super + {_,shift + }w
    firefox {_, --private-window}

Print
    scrot.sh

alt + b
    test -n "$(pidof lemonbar)" && (pkill lemonbar; bspc config top_padding 0) || (bar.sh; bspc config top_padding 30)

#
# bspwm hotkeys
#

# quit bspwm normally
alt + super + Escape
	bspc quit

# close and kill
alt + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
alt + m
	bspc desktop -l next

# set the window state
alt + {t,s,f}
	bspc node -t {tiled,floating,fullscreen}

# focus the node in the given direction
alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node
alt + {_,shift + }Tab
	bspc node -f {next,prev}

# focus the next/previous desktop
alt + bracket{left,right}
	bspc desktop -f {prev,next}

super + alt + {h,j,k,l}
    bspc node -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
    bspc node -e {left -10,up +10,up -10,right +10}

# rotate desktop
alt + {comma,period}
    bspc desktop --rotate {90,270}

# move to corner
super + {y,u,b,n,g}
    corner.sh {tl,tr,bl,br,mm}

# move to edge
super + {h,j,k,l}
    corner.sh {ml,mb,mt,mr}

# change gaps
alt + {minus,equal}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 20 ))

# Restore original gap
alt + shift + equal
    bspc config -d focused window_gap 35

# focus/move window to desktop
alt + {_,shift + }{1-8}
	bspc {desktop -f,node -d} '^{1-8}'

alt + {_,shift + } grave
    bspc {desktop -f,node -d} '^5'

alt + {_,shift + }{F1,F2,F3,F4}
	bspc {desktop -f,node -d} '^{5,6,7,8}'

# preselect the direction
alt + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# preselect the ratio
alt + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
alt + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
alt + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# real manual mode (like i3)
#alt + ctrl + {h,j,k,l}
#    bspc rule -a "*" split_dir={left,down,up,right}

# expand the tiled space in the given direction
alt + super + {h,j,k,l}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# contract the tiled space in the given direction
alt + super + shift + {h,j,k,l}
	bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# focus
~button1
	bspc pointer -g focus

# start move/resize
alt + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

# end move/resize
alt + @button{1-3}
	bspc pointer -u
