# wmtls

alt + Escape
    pkill -USR1 sxhkd

# launch {{{

alt + Return
    urxvt

alt + r
    run

alt + {_,shift + }w
    chromium {_, --incognito}

# take a scrot
alt + Print
    shot

# }}}

# misc {{{

alt + shift + c
    killw $(pfw)

alt + f
    fullw $(pfw)

alt + {_,shift + }Tab
    focusw {next, prev}

# ~button1
#    focusw $(underneath)

alt + {1,2,3,4,comma,period}
    wrk -g {0,1,2,3,4,5}

alt + shift + {1,2,3,4,comma,period}
    wrk -m {0,1,2,3,4,5}

# }}}

# move/resize {{{

alt + {h,j,k,l}
    wmv {-40 0, 0 40, 0 -40, 40 0} $(pfw)

alt + ctrl + {h,j,k,l}
    wmv {-10 0, 0 10, 0 -10, 10 0} $(pfw)

alt + shift + {h,j,k,l}
    wrs {-40 0, 0 40, 0 -40, 40 0} $(pfw)

alt + shift + ctrl + {h,j,k,l}
    wrs {-10 0, 0 10, 0 -10, 10 0} $(pfw)

alt + {y,u,i,o,g,p,b,n,m}
    cornerw {tl,tm,tr,ml,mm,mr,bl,bm,br}

# }}}

# presets {{{

alt + ctrl + q
    wtp 465 263 430 237 $(pfw)

alt + ctrl + w
    wtp 465 222 430 318 $(pfw)

alt + ctrl + e
    wtp 465 200 430 363 $(pfw)

alt + ctrl + a
    wtp 465 137 430 489 $(pfw)

alt + ctrl + s
    wtp 465 52 430 658 $(pfw)

alt + ctrl + d
    wtp 465 10 430 742 $(pfw)

