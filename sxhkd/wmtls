# }}}

# music and vol {{{

# volume
alt + F{7,8}
    amixer -q sset Master 5%{-,+} unmute && \
        pkill lemonbar; popup "$(~/bin/bar/vol)"

# music
alt + F{9,11}
    mpc {prev,next} && popup $(~/bin/bar/mus)

alt + F10
    mpc toggle && popup "$(~/bin/bar/mus)"

alt + BackSpace
    mpc prev && mpc next && popup "$(~/bin/bar/mus)"

# }}}

# popups {{{

alt + a
    popup "$(~/bin/bar/mus)"

alt + s
    popup "$(~/bin/bar/clk)    $(~/bin/bar/dat)"

alt + d
    popup "$(~/bin/bar/bat)    $(~/bin/bar/vol)"

# }}}
