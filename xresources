#include ".colors/aether"
#include ".colors/tmp"

! urxvt {{{

! set cursor blinking
urxvt.cursorBlink: 1

! set terminal padding
urxvt.internalBorder: 15

! disable scrollbar
urxvt.scrollBar: false

! set urxvt as login shell
urxvt*loginShell: false

! set the font
urxvt.font: xft:terra:pixelsize=12

! no bold fonts for you
urxvt*boldFont: 
urxvt*italicFont: 
urxvt*bolditalicFont: 

! increase line spacing
urxvt*lineSpace: 1

! }}}
