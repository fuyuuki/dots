#include ".colors/monol"

! set the font
URxvt.font: -sythe-tangerine-*-*-*-*-*-*-*-*-*-*-*-*
URxvt.letterSpace: 0

! no bold fonts for you
URxvt*boldFont: 
URxvt*italicFont: 
URxvt*bolditalicFont: 

! increase line spacing
URxvt*lineSpace: 1

! disable scrollbar
URxvt.scrollBar: false

! set urxvt as login shell
URxvt*loginShell: false

! set terminal padding
URxvt.internalBorder: 20

! set cursor blinking
URxvt.cursorBlink: 1
