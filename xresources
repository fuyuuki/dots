! st {{{

! font and line spacing
st.font: yuki:pixelsize=9
st.chscale: 1.2
st.cwscale: 1.0

! internal border
st.borderpx: 15

! cursor is a block
st.cursorshape:  1

! }}}

! urxvt {{{

! set cursor blinking
urxvt.cursorBlink: 1

! set terminal padding
urxvt.internalBorder: 15

! disable scrollbar
urxvt.scrollBar: false

! set urxvt as login shell
urxvt*loginShell: false

! set the font
urxvt.font: xft:yuki:pixelsize=8

! no bold fonts for you
urxvt*boldFont: 
urxvt*italicFont: 
urxvt*bolditalicFont: 

! increase line spacing
urxvt*lineSpace: 2

! }}}
