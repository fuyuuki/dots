#include ".colors/aether"
#include ".colors/tmp"

! urxvt {{{

! set cursor blinking
urxvt.cursorBlink: 1

! set terminal padding
urxvt.internalBorder: 15

! disable scrollbar
urxvt.scrollBar: false

! set urxvt as login shell
urxvt*loginShell: false

! set the font
urxvt.font: xft:terra:pixelsize=12, '-*-siji-*-*-*-*-*-*-*-*-*-*-*-*'

! no bold fonts for you
urxvt*boldFont: 
urxvt*italicFont: 
urxvt*bolditalicFont: 

! increase line spacing
urxvt*lineSpace: 1

! }}}

! twobwm {{{

twobwm.enable_compton: true
twobwm.focus_color: acc
twobwm.unfocus_color: wht
twobwm.fixed_color: blk
twobwm.unkill_color: blk
twobwm.outer_border_color: bg
twobwm.fixed_unkill_color: blk

! }}}

! misc {{{

emacs.font: terra-10

! }}}
